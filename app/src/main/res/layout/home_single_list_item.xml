<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="140dp"
    android:padding="12dp"
    android:background="@drawable/card_background"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/user_name">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/request_service_img"
        android:layout_width="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/request_service" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/request_service_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="Request Service"
        android:textColor="@color/onBackground"
        android:layout_marginTop="3dp"
        android:textSize="15sp"
        app:fontFamily="@font/poppins_bold"
        app:layout_constraintEnd_toEndOf="@+id/request_service_img"
        app:layout_constraintStart_toStartOf="@+id/request_service_img"
        app:layout_constraintTop_toBottomOf="@+id/request_service_img" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/request_service_desc"
        tools:text="Ranging from repairs to correction."
        android:textColor="@color/onBackground"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/request_service_title"
        app:fontFamily="@font/poppins_medium"
        app:layout_constraintStart_toStartOf="@+id/request_service_title"
        app:layout_constraintTop_toBottomOf="@+id/request_service_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Book now!"
        android:textColor="@color/onBackground"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/request_service_desc"
        app:fontFamily="@font/poppins_medium"
        app:layout_constraintStart_toStartOf="@+id/request_service_desc"
        app:layout_constraintTop_toBottomOf="@+id/request_service_desc" />
</androidx.constraintlayout.widget.ConstraintLayout>